<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<!--=====================================-->

<div class="container">
    <div class="card mt-5">
        <div class="card-header">
            <h2>Novo artigo</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/articles/save">
                <input type="text" name="title" placeholder="Defina o tÃ­tulo do artigo..." class="form-control" autocomplete="off">
                <br><textarea name="body" placeholder="Escreva o artigo aqui..." class="form-control" id="article"></textarea>
                <br><label>Categoria do artigo</label>
                <select name="category" class="form-control">
                    <% categories.forEach((category) => {%>
                        <option value="<%= category.id %>"><%= category.title %></option>
                    <% }) %>
                </select>
                <br><button class="btn btn-success">Cadastrar</button> 
            </form>
        </div>
    </div>
</div>

